<%- include('includes/_head') %>
  <div class="container" style="max-width:600px;">
    <h2 id="tags" class="mb-3">
      Tags
    </h2>
    <form class="d-flex mb-3">
      <input type="text" name="txt-addTag" id="txt-addTag" class="form-control" placeholder="New tag name here...">
      <button id="btn-addTag" type="submit" class="btn btn-primary ms-2" style="min-width:150px">Add Tag</button>
    </form>


    <ul id="tagTable" class="list-group mx-auto">
      <% data.tags.forEach(tag=> { %>
        <li data-id=" <%=tag._id %>" class="th-tag list-group-item d-flex justify-content-between align-items-center">
          <span class="th-tagName form-control-plaintext" data-id="<%= tag._id %>" contenteditable="true">
            <%= tag.name %>
          </span>
          <% if (tag.count===0) { %>
            <span class="btn-removeTag badge bg-danger rounded-pill me-2" data-id="<%= tag._id %>">X Remove</span>
            <% } %>
              <span class="th-tagCount badge bg-secondary rounded-pill">
                <%= tag.count %>
              </span>

        </li>
        <% }) %>
          </table>
  </div>

  <script src="/js/admin-tags.js"></script>
  <%- include('includes/_foot') %>